root = true

# All files
[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Other config files
[*.{json,yml}]
indent_size = 2

[Dockerfile]
indent_size = 2

[*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,vue,css,scss,sass,less,styl}]
indent_size = 4
end_of_line = lf
