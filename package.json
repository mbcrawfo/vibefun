{
    "name": "vibefun",
    "version": "0.1.0",
    "description": "A pragmatic functional programming language that transpiles to JavaScript",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "tsc --build tsconfig.json",
        "build:watch": "npm run build:watch --workspaces --if-present",
        "check": "npm run check --workspaces",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint packages/*/src/**/*.ts scripts/**/*.ts",
        "lint:fix": "eslint packages/*/src/**/*.ts scripts/**/*.ts --fix",
        "format": "prettier --write \"packages/*/src/**/*.ts\" \"scripts/**/*.ts\"",
        "format:check": "prettier --check \"packages/*/src/**/*.ts\" \"scripts/**/*.ts\"",
        "verify": "npm run build && npm run check && npm run lint && npm run test && npm run format:check",
        "clean": "npm run clean --workspaces --if-present",
        "docs:errors": "node --experimental-strip-types scripts/generate-error-docs.ts",
        "docs:errors:check": "node --experimental-strip-types scripts/generate-error-docs.ts --check",
        "vibefun": "node packages/cli/dist/index.js"
    },
    "keywords": [
        "functional-programming",
        "compiler",
        "transpiler",
        "javascript",
        "typescript",
        "ml",
        "type-inference"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=24.13.0"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.7.0",
        "@types/node": "24.10.9",
        "@typescript-eslint/eslint-plugin": "8.54.0",
        "@typescript-eslint/parser": "8.54.0",
        "@vitest/coverage-v8": "4.0.18",
        "eslint": "9.39.2",
        "eslint-config-prettier": "10.1.8",
        "prettier": "3.8.1",
        "typescript": "5.9.3",
        "vitest": "4.0.18"
    }
}
