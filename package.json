{
    "name": "vibefun",
    "version": "0.1.0",
    "description": "A pragmatic functional programming language that transpiles to JavaScript",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "vibefun": "dist/cli/index.js"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "check": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "verify": "npm run check && npm run lint && npm run test && npm run format",
        "verify:ci": "npm run check && npm run lint && npm run test && npm run format:check",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run clean && npm run build"
    },
    "keywords": [
        "functional-programming",
        "compiler",
        "transpiler",
        "javascript",
        "typescript",
        "ml",
        "type-inference"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=24.10.0"
    },
    "dependencies": {
        "commander": "12.1.0"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.4.0",
        "@types/node": "22.10.5",
        "@typescript-eslint/eslint-plugin": "8.20.0",
        "@typescript-eslint/parser": "8.20.0",
        "@vitest/coverage-v8": "3.0.5",
        "eslint": "9.18.0",
        "eslint-config-prettier": "9.1.0",
        "prettier": "3.4.2",
        "typescript": "5.8.3",
        "vitest": "3.0.5"
    }
}
