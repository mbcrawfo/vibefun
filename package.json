{
    "name": "vibefun",
    "version": "0.1.0",
    "description": "A pragmatic functional programming language that transpiles to JavaScript",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "tsc --build tsconfig.json",
        "build:watch": "npm run build:watch --workspaces --if-present",
        "check": "npm run check --workspaces",
        "test": "npm run test --workspaces --if-present",
        "test:watch": "npm run test:watch --workspaces --if-present",
        "test:coverage": "npm run test:coverage --workspaces --if-present",
        "lint": "eslint packages/*/src/**/*.ts scripts/**/*.ts",
        "lint:fix": "eslint packages/*/src/**/*.ts scripts/**/*.ts --fix",
        "format": "prettier --write \"packages/*/src/**/*.ts\" \"scripts/**/*.ts\"",
        "format:check": "prettier --check \"packages/*/src/**/*.ts\" \"scripts/**/*.ts\"",
        "verify": "npm run build && npm run check && npm run lint && npm run test && npm run format:check",
        "clean": "npm run clean --workspaces --if-present",
        "docs:errors": "node --experimental-strip-types scripts/generate-error-docs.ts",
        "docs:errors:check": "node --experimental-strip-types scripts/generate-error-docs.ts --check"
    },
    "keywords": [
        "functional-programming",
        "compiler",
        "transpiler",
        "javascript",
        "typescript",
        "ml",
        "type-inference"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=24.10.0"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.7.0",
        "@types/node": "25.0.3",
        "@typescript-eslint/eslint-plugin": "8.50.0",
        "@typescript-eslint/parser": "8.50.0",
        "@vitest/coverage-v8": "3.0.5",
        "eslint": "9.18.0",
        "eslint-config-prettier": "9.1.0",
        "prettier": "3.7.4",
        "typescript": "5.9.3",
        "vitest": "3.0.5"
    }
}
